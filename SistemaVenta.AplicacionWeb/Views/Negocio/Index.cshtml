@{
    ViewData["Title"] = "Negocio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Estilos personalizados -->
<style>
    .form-control-sm {
        font-size: 0.875rem;
    }

    .card-header.bg-second-primary {
        background: linear-gradient(135deg, #4e73df, #1cc88a);
    }

    .form-group label {
        font-weight: 500;
    }

    .form-section {
        background-color: #f8f9fc;
        border-radius: 0.75rem;
        padding: 1rem;
        box-shadow: 0 0.125rem 0.5rem rgba(0, 0, 0, 0.05);
    }

    #imgLogo {
        width: 100%;
        max-width: 200px;
        border: 2px solid #ddd;
        border-radius: 0.75rem;
        padding: 5px;
        background-color: #fff;
    }

    #btnGuardarCambios {
        width: 100%;
    }

    .form-control-file {
        font-size: 0.875rem;
        padding: 0.375rem 0.75rem;
    }
</style>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-white">Datos del Negocio</h6>
        </div>
        <div class="card-body">
            <form>
                <div class="row">
                    <!-- Formulario -->
                    <div class="col-lg-8">
                        <div class="form-section">

                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtNumeroDocumento">Número Documento</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtNumeroDocumento" name="Numero Documento">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtRazonSocial">Razón Social</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtRazonSocial" name="Razon Social">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtCorreo">Correo</label>
                                    <input type="email" class="form-control form-control-sm input-validar" id="txtCorreo" name="Correo">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtDireccion">Dirección</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtDireccion" name="Direccion">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txTelefono">Teléfono</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txTelefono" name="Telefono">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtImpuesto">% Impuesto</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtImpuesto" name="Impuesto">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtSimboloMoneda">Símbolo Moneda</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtSimboloMoneda" name="Simbolo Moneda">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtLogo">Logo</label>
                                    <input class="form-control-file" type="file" id="txtLogo" />
                                </div>
                            </div>

                        </div>
                    </div>

                    <!-- Logo y botón -->
                    <div class="col-lg-4">
                        <div class="form-section text-center">
                            <img id="imgLogo" alt="Logo" />
                            <hr />
                            <button class="btn btn-success btn-sm" type="button" id="btnGuardarCambios">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/vistas/Negocio_Index.js"></script>
}
