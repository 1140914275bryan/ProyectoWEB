@{
    ViewData["Title"] = "Nueva Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos {
    <!-- Estilos para Select2 -->
    <link href="~/vendor/select2/select2.min.css" rel="stylesheet" />

    <style>
        .select2 {
            width: 100% !important;
        }

        .card-header.bg-second-primary {
            background-color: #4e73df;
        }

        .card {
            border: none;
            border-radius: 0.75rem;
        }

        .card-header h6 {
            font-size: 1rem;
            font-weight: 600;
        }

        .form-control-sm,
        .custom-select {
            border-radius: 0.375rem;
        }

        .table-sm th,
        .table-sm td {
            vertical-align: middle;
        }

        .btn-success {
            background-color: #1cc88a;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-success:hover {
                background-color: #17a673;
            }

        #tbProducto th,
        #tbProducto td {
            text-align: center;
        }

        input[disabled] {
            background-color: #f8f9fc !important;
            color: #5a5c69;
        }
    </style>
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <div class="row">
        <!-- Panel Cliente + Productos -->
        <div class="col-sm-8">
            <!-- Cliente -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-second-primary">
                    <h6 class="m-0 font-weight-bold text-white">Cliente</h6>
                </div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <input type="text" class="form-control form-control-sm" id="txtDocumentoCliente" placeholder="Número de documento">
                        </div>
                        <div class="form-group col-sm-6">
                            <input type="text" class="form-control form-control-sm" id="txtNombreCliente" placeholder="Nombre completo">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Productos -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-second-primary">
                    <h6 class="m-0 font-weight-bold text-white">Productos</h6>
                </div>
                <div class="card-body">
                    <div class="form-row mb-3">
                        <div class="col-sm-12">
                            <select class="form-control form-control-sm" id="cboBuscarProducto">
                                <option value="">Buscar producto...</option>
                            </select>
                        </div>
                    </div>
                    <table class="table table-striped table-sm" id="tbProducto">
                        <thead class="thead-light">
                            <tr>
                                <th></th>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Precio</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Panel Detalle Venta -->
        <div class="col-sm-4">
            <!-- Detalle -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-second-primary">
                    <h6 class="m-0 font-weight-bold text-white">Detalle</h6>
                </div>
                <div class="card-body">
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="cboTipoDocumentoVenta">Tipo</label>
                        </div>
                        <select class="custom-select" id="cboTipoDocumentoVenta">
                            <option value="">Seleccione</option>
                        </select>
                    </div>
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Sub Total</span>
                        </div>
                        <input type="text" class="form-control text-right" id="txtSubTotal" disabled>
                    </div>
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">IGV (18%)</span>
                        </div>
                        <input type="text" class="form-control text-right" id="txtIGV" disabled>
                    </div>
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Total</span>
                        </div>
                        <input type="text" class="form-control text-right" id="txtTotal" disabled>
                    </div>
                </div>
            </div>

            <!-- Botón -->
            <div class="card shadow">
                <div class="card-body">
                    <button class="btn btn-success btn-sm btn-block" id="btnTerminarVenta">Terminar Venta</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/select2/es.min.js"></script>
    <script src="~/js/vistas/Nueva_Venta.js"></script>
}
