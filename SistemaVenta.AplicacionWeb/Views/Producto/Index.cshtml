@{
    ViewData["Title"] = "Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos {
    <link rel="stylesheet" href="~/vendor/datatables/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensiones/css/responsive.dataTables.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensiones/css/buttons.dataTables.min.css">

    <style>
        .card-header.bg-second-primary {
            background-color: #2c3e50;
            color: white;
        }

        .btn-success {
            background-color: #1abc9c;
            border-color: #16a085;
        }

            .btn-success:hover {
                background-color: #16a085;
                border-color: #149174;
            }

        .table thead th {
            background-color: #f8f9fc;
            color: #2c3e50;
            font-weight: 600;
        }

        .modal-header {
            background-color: #2c3e50;
            color: white;
        }

        .modal-footer .btn-primary {
            background-color: #3498db;
            border-color: #2980b9;
        }

            .modal-footer .btn-primary:hover {
                background-color: #2980b9;
            }

        label {
            font-weight: 600;
        }

        .form-control, .form-control-file, .form-select {
            border-radius: 0.25rem;
        }

            .form-control:focus {
                border-color: #1abc9c;
                box-shadow: 0 0 0 0.2rem rgba(26, 188, 156, 0.25);
            }

        .table-bordered th, .table-bordered td {
            border-color: #dee2e6;
        }

        #tbdata td img {
            max-width: 60px;
            border-radius: 0.25rem;
        }
    </style>
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-white">Lista de Productos</h6>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-3">
                    <button class="btn btn-success" id="btnNuevo">
                        <i class="fas fa-plus-circle"></i> Nuevo Producto
                    </button>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="tbdata" cellspacing="0" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Imagen</th>
                            <th>Codigo Barra</th>
                            <th>Marca</th>
                            <th>Descripcion</th>
                            <th>Categoria</th>
                            <th>Stock</th>
                            <th>Precio</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal Detalle -->
    <div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title">Detalle Producto</h6>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <input type="hidden" value="0" id="txtId">
                        <div class="row">
                            <div class="col-sm-8">
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="txtCodigoBarra">Codigo Barra</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtCodigoBarra">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtMarca">Marca</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtMarca">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="txtDescripcion">Descripcion</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtDescripcion">
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="cboCategoria">Categoria</label>
                                        <select class="form-control form-control-sm" id="cboCategoria"></select>
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtStock">Stock</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtStock">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="txtPrecio">Precio</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtPrecio">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="cboEstado">Estado</label>
                                        <select class="form-control form-control-sm" id="cboEstado">
                                            <option value="1">Activo</option>
                                            <option value="0">No Activo</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="txtImagen">Imagen</label>
                                    <input class="form-control-file" type="file" id="txtImagen" />
                                </div>
                            </div>
                            <div class="col-sm-4 text-center">
                                <img id="imgProducto" style="max-width:200px;" src="" class="img-fluid rounded shadow" alt="...">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary btn-sm" type="button" id="btnGuardar">Guardar</button>
                    <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/vendor/datatables/extensiones/js/dataTables.responsive.min.js"></script>
    <script src="~/vendor/datatables/extensiones/js/dataTables.buttons.min.js"></script>
    <script src="~/vendor/datatables/extensiones/js/jszip.min.js"></script>
    <script src="~/vendor/datatables/extensiones/js/buttons.html5.min.js"></script>
    <script src="~/vendor/datatables/extensiones/js/buttons.print.min.js"></script>
    <script src="~/js/vistas/Producto_Index.js"></script>
}
