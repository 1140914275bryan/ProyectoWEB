@{
    ViewData["Title"] = "Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Estilos personalizados -->
<style>
    .profile-card {
        border-radius: 1rem;
        overflow: hidden;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .profile-header {
        background: linear-gradient(135deg, #4e73df, #1cc88a);
        padding: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

        .profile-header h6 {
            color: #fff;
            margin: 0;
        }

    .profile-img {
        width: 160px;
        height: 160px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #fff;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
        margin: 1rem auto;
        display: block;
    }

    .form-control:disabled {
        background-color: #f8f9fc;
    }

    .btn-block {
        width: 100%;
    }

    .form-group label {
        font-weight: 500;
    }
</style>

<!-- Contenido del Perfil -->
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-sm-10 col-md-6 col-lg-5">

            <div class="card shadow profile-card mb-4">
                <div class="card-header profile-header">
                    <h6 class="font-weight-bold"><i class="fas fa-user"></i> Mis Datos</h6>
                </div>

                <div class="card-body">
                    <form>
                        <div class="form-row">
                            <div class="form-group col-sm-12 text-center">
                                <img id="imgFoto" src="" class="profile-img" alt="Foto de perfil">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtNombre">Nombre</label>
                            <input type="text" class="form-control form-control-sm" disabled id="txtNombre">
                        </div>

                        <div class="form-group">
                            <label for="txtCorreo">Correo</label>
                            <input type="email" class="form-control form-control-sm" id="txtCorreo">
                        </div>

                        <div class="form-group">
                            <label for="txTelefono">Teléfono</label>
                            <input type="text" class="form-control form-control-sm" id="txTelefono">
                        </div>

                        <div class="form-group">
                            <label for="txtRol">Rol</label>
                            <input type="text" class="form-control form-control-sm" disabled id="txtRol">
                        </div>

                        <hr>

                        <button type="button" class="btn btn-success btn-sm btn-block" id="btnGuardarCambios">
                            <i class="fas fa-save"></i> Guardar Cambios
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/vistas/Home_Perfil.js"></script>
}
