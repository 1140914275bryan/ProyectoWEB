@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Estilos personalizados -->
<style>
    .card {
        border: none;
        border-radius: 1rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }


    .card-header {
        border-radius: 1rem 1rem 0 0;
    }

    .card-body {
        padding: 1rem 1.2rem;
    }

    .text-uppercase {
        font-size: 0.75rem;
        letter-spacing: 0.05rem;
    }

    .fw-bold {
        font-weight: 600 !important;
    }

    .chart-area,
    .chart-pie {
        height: 350px !important;
    }

    .text-primary {
        color: #4e73df !important;
    }

    .text-success {
        color: #1cc88a !important;
    }

    .text-info {
        color: #36b9cc !important;
    }

    .text-warning {
        color: #f6c23e !important;
    }

    .bg-primary {
        background-color: #4e73df !important;
    }

    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
    }

    .rounded-3 {
        border-radius: 1rem !important;
    }

    .g-3 > [class*='col'] {
        padding-left: 1rem;
        padding-right: 1rem;
        margin-bottom: 1.5rem;
    }
</style>

<!-- Encabezado -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-primary">Dashboard</h1>
</div>

<!-- Métricas -->
<div class="row g-3">

    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm bg-light">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <p class="text-uppercase text-primary fw-bold mb-1 small">Total de Ventas</p>
                    <h5 class="fw-bold text-dark mb-0" id="totalVenta">30</h5>
                </div>
                <i class="fas fa-shopping-basket fa-2x text-primary"></i>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm bg-light">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <p class="text-uppercase text-success fw-bold mb-1 small">Total de Ingresos</p>
                    <h5 class="fw-bold text-dark mb-0" id="totalIngresos">$215,000</h5>
                </div>
                <i class="fas fa-dollar-sign fa-2x text-success"></i>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm bg-light">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <p class="text-uppercase text-info fw-bold mb-1 small">Total de Productos</p>
                    <h5 class="fw-bold text-dark mb-0" id="totalProductos">50</h5>
                </div>
                <i class="fas fa-clipboard-list fa-2x text-info"></i>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card shadow-sm bg-light">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <p class="text-uppercase text-warning fw-bold mb-1 small">Total de Categorías</p>
                    <h5 class="fw-bold text-dark mb-0" id="totalCategorias">18</h5>
                </div>
                <i class="fas fa-tags fa-2x text-warning"></i>
            </div>
        </div>
    </div>

</div>

<!-- Gráficas -->
<div class="row mt-4">

    <!-- Gráfico de área -->
    <div class="col-xl-8 col-lg-7 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white py-3">
                <h6 class="m-0 fw-bold">Ventas de los últimos 7 días</h6>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="charVentas"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráfico de pastel -->
    <div class="col-xl-4 col-lg-5 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white py-3">
                <h6 class="m-0 fw-bold">Productos más vendidos</h6>
            </div>
            <div class="card-body">
                <div class="chart-pie">
                    <canvas id="charProductos"></canvas>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="mb-4">
    <label for="txtIdVenta">Número de Venta:</label>
    <input type="number" id="txtIdVenta" class="form-control w-25 d-inline-block" />
    <button id="btnBuscarVenta" class="btn btn-primary ml-2">Buscar</button>
</div>

<!-- Gráfico de Detalle por Número de Venta -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Detalle de Venta por Número</h6>
    </div>
    <div class="card-body">
        <div class="chart-bar">
            <canvas id="charDetalleVenta"></canvas>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/vendor/chart.js/Chart.min.js"></script>
    <script src="~/js/vistas/DashBoard_Index.js"></script>
}
